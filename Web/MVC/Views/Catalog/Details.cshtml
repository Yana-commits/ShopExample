@model MVC.ViewModels.DetailsVM

@{
            var parms = new Dictionary<string, string>
            {
                { "id", Model.CatalogItem.Id.ToString()},
                { "name", Model.CatalogItem.Name },
                { "price", Model.CatalogItem.Price.ToString() }
            };
}

<div class="">

        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.CatalogItem.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning">@((Model.CatalogItem.Price).ToString("c"))</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.CatalogItem.PictureUrl" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border" style="background-color:lavenderblush">@Model.CatalogItem.FruitType.Type</span>
                                        <span class="badge p-3 border" style="background-color:azure">@Model.CatalogItem.FruitSort.Sort</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Model.CatalogItem.Description</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ExistsInCart)
                            {
                            <a asp-controller="Basket" asp-action="RemoveFromBasket"  asp-route-id="@Model.CatalogItem.Id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Remove from cart</a>
                            }
                            else
                            {
                            <a asp-controller="Basket" asp-action="AddToBasket"  asp-all-route-data="parms" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Add to cart</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>